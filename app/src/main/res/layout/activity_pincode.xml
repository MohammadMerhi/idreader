            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Btn_backspace"
                style="@style/KeyPadBtn">

                <TextView
                    android:id="@+id/delete_btn_text"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignBottom="@+id/effect"
                    android:layout_alignLeft="@+id/effect"
                    android:layout_alignRight="@+id/effect"
                    android:layout_alignTop="@+id/effect"
