                    android:layout_alignBottom="@+id/circle_shape_one"
                    android:layout_alignLeft="@+id/circle_shape_one"
                    android:layout_alignRight="@+id/circle_shape_one"
                    android:layout_alignTop="@+id/circle_shape_one"
                    android:text="1" />

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/circle_shape_one"
                    android:layout_alignLeft="@+id/circle_shape_one"
                    android:layout_alignRight="@+id/circle_shape_one"
                    android:layout_alignTop="@+id/circle_shape_one"
                    android:src="@drawable/ripple" />

            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Btn2"
                style="@style/KeyPadBtn">

